@model IEnumerable<Sistema_Consultas.Models.Thematic> 

<div class="main main-raised">
    <div class="container">
        <div class="section text-center">
            <div class="container2">
                @foreach (var thematic in Model)
                {
                <div class="element-card">
                    <div class="front-facing">
                        <h6> @thematic.name</h6>
                        <p class="title"></p>

                    </div>
                    <div class="back-facing">
                        <p>Breve descripción</p>
                        <p><a class="btn" href="#" target="_blank">Seleccionar</a></p>
                    </div>
                </div>
                }




            </div>

        </div>
    </div>
</div>
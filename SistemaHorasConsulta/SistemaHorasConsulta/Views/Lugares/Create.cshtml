@model ITCR.DATIC.SistemaHorasConsulta.Modelo.Lugare

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_PrincipalAdmin.cshtml";
}

<h2>Crear lugar</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
 
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           
            <label class="control-label col-md-2"> Nombre del Lugar</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-default pull-right" />
            </div>
        </div>
    </div>
}


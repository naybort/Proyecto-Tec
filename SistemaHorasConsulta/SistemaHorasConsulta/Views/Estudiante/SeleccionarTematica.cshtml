@model IEnumerable<Modelos.Tematica>
@{
    ViewBag.Title = "SeleccionarTematica";
    Layout = "~/Views/Shared/_Principal.cshtml";
}

<div class="main main-raised">
    <div class="container">
        <div class="section text-center">
            <div class="container3">
                @foreach (var tematica in Model)
                {

                    <div class="element-card">
                        <div class="front-facing">
                            <h6> @tematica.NombreTematica</h6>
                            <p class="title"></p>

                        </div>
                        <div class="back-facing">
                            <p>Breve descripción</p>
                            <p><a class="btn" href="Estudiante/SeleccionarProfesor">Seleccionar</a></p>
                        </div>
                    </div>
                }


                </div>

        </div>
    </div>
</div>

@model IEnumerable<API.Models.IEstudiante>
@{
    Layout = "~/Views/Shared/_Principal.cshtml";
}
<section class="content-header">
    <h2>Citas</h2>
</section>
<div class="main main-raised">
    <div class="container">
        <div class="section text-center">
            <div class="container3">
                <table class="table table-striped  table-bordered table-hover table-condensed" style="max-width: 60em">
                    <thead>
                        <tr class="bg-primary">
                            <th class="col-md-4" style="border-radius: 5px 0 0 0 ">
                                ID Cita
                            </th>
                            <th>
                                Dia
                            </th>
                            <th>
                                Lugar
                                
                            </th>
                            <th style="text-align: center">
                                Info
                            </th>
                            <th style="border-radius: 0 5px 0 0; text-align: center ">
                                Opción
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model)
                        {
                            foreach (var cita in i.citas)
                            {
                                <tr>
                                    <td>@cita.IdCita</td>
                                    <td>
                                        Martes
                                    </td>
                                    <td>
                                        @cita.Lugar.Nombre
                                    </td>
                                    <td style="text-align: center">
                                        @cita.IdHorario

                                    </td>
                                    <td style="text-align: center">
                                        @Html.ActionLink("Cancelar", "TiposImpresionActualizar", new { @class = "btn btn-primary" })
                                       
                                    </td>
                                </tr>
                            }


                        }

                        <tr>
                            <td>
                                caca
                            </td>
                            <td>
                                caca
                            </td>
                            <td>
                                caca
                            </td>
                            <td style="text-align: center">
                                caca

                            </td>
                            <td style="text-align: center">
                                @Html.ActionLink("Editar", "TiposImpresionActualizar", new { @class = "btn btn-primary" })
                                @Html.ActionLink("Borrar", "TiposImpresionEliminar", "Home", new { @class = "modal-link btn btn-danger" })
                            </td>
                        </tr>

                    </tbody>
                </table>



            </div>

        </div>
    </div>
</div>

@model IEnumerable<ITCR.DATIC.SistemaHorasConsulta.Negocio.Models.Citas>
@{
    Layout = "~/Views/Shared/_Principal.cshtml";
}

<div class="main main-raised">
    <div class="container">
        <div class="section text-center">
            <div class="container3">
                <table class="table table-striped  table-bordered table-hover table-condensed" style="max-width: 60em">
                    <thead>
                        <tr class="bg-primary">
                            <th class="col-md-4" style="border-radius: 5px 0 0 0 ">
                                ID Cita
                            </th>
                            <th>
                                Fecha y Hora de incio
                            </th>
                            <th>
                                Profesor

                            </th>
                            <th>
                                Lugar

                            </th>
                  
                            <th style="border-radius: 0 5px 0 0; text-align: center ">
                                Opción
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model)
                        {

                        <tr>
                            <td>@i.IdCita</td>
                            <td>
                                @i.Fecha.ToShortDateString() @i.HoraInicio
                            </td>
                            <td>
                                @i.Nombre @i.PrimerApellido @i.SegundoApellido
                            </td>
                            <td>
                                @i.NombreLugar
                            </td>
                          
                            <td style="text-align: center">
                                @Html.ActionLink("Cancelar", "EliminarCita", new { idCita = i.IdCita }, new { @class = "btn btn-primary", })

                            </td>
                        </tr>



                        }

                  

                    </tbody>
                </table>



            </div>

        </div>
    </div>
</div>

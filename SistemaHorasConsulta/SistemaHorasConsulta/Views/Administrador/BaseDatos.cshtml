@model IEnumerable<ITCR.DATIC.SistemaHorasConsulta.Modelo.Profesore>
@{
    Layout = "~/Views/Shared/_PrincipalAdmin.cshtml";
}
<table class="table">
    <tr>
        <th>Docente</th>
        <th>7:30-8:30</th>
        <th>8:30-9:30</th>
        <th>9:30-10:30</th>
        <th>10:30-11:30</th>
        <th>11:30-12:30</th>
        <th>1:00-2:00</th>
        <th>3:00-4:00</th>
        <th>4:00-5:00</th>
        <th class="table-dark">5:00-6:00</th>
        <th>Día</th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>

        @for (var i = 0; i < 9; i++)
        {
            List<string> array = new List<string> { "7:30", "8:30", "9:30", "10:30", "11:30", "1:00", "2:00", "3:00", "4:00", "5:00" };
            TimeSpan time = TimeSpan.Parse(array[i]);
            var horaInicio = item.Horarios.Where(x => x.HoraInicio == time).FirstOrDefault();

            if (horaInicio != null)
            {
                <td bgcolor="70a2ff"></td>
            }
            else
            {
                <td></td>
            }


        }
        <td>
            Martes
        </td>


    </tr>
    }

</table>

